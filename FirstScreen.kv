#:import Factory kivy.factory.Factory

<CatProButton>:
    text_color: 0.349, 0.349, 0.349, 1
    font_size: "15sp"
    on_release:
        root.add_to_db()
        app.update_all()

<FirstScreen>:
    text_in: cost_input.text
    id: screen1

    MDBoxLayout:
        orientation: 'vertical'
        padding: [dp(10), dp(40),dp(10),dp(10)]
        spacing: 10

        MDTextField:
            id: cost_input
            heigh: '45dp'
            input_type: 'number'
            hint_text: "wpisz kwotÄ™ "
            mode: "fill"
            multiline: False
            on_focus: self.text = ""
            on_text: root._input()

        MDBoxLayout:
            size_hint_y: 0.6
            CatProView:
                id: catpro_view
                viewclass: 'CatProButton'
                RecycleBoxLayout:
                    spacing: 10
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'

        MDSeparator:
            height: "1dp"

        MDLabel:
            size_hint_y: 0.3
            text: 'przypisz koszty do pozycji'
            halign: 'center'
            font_style: 'Body2'
            theme_text_color: "Custom"
            text_color: 0.349, 0.349, 0.349, 1



