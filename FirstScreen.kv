#:import Factory kivy.factory.Factory

<CatProButton>:
    text_color: 0.349, 0.349, 0.349, 1
    #on_press:
        #root.add_to_db()
    on_release:
        root.add_to_db()
        #todo: clean input field and list

<FirstScreen>:
    text_in: cost_input.text
    id: screen1

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDTextField:
            id: cost_input
            heigh: '45dp'
            hint_text: "wpisz kwotę "
            mode: "fill"
            multiline: False
            on_focus: self.text = ""
            on_text: root._input()

        MDLabel:
            size_hint_y: 0.4
            text: 'wybierz kategorię lub projekt aby dodać nowy koszt'
            halign: 'center'
            font_style: 'Body1'
            theme_text_color: "Custom"
            text_color: 0.349, 0.349, 0.349, 1


        CatProView:
            id: catpro_view
            viewclass: 'CatProButton'
            RecycleBoxLayout:
                spacing: 10
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'



