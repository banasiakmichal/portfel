<MyLabel@MDLabel>:
    halign: 'center'
    font_style: 'Body1'
    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_color

<PlusButton@MDIconButton>:
    icon: "plus-circle-outline"
    icon_size: "44sp"
    text_color: 0.902, 0.494, 0.133, 1
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    #text_color: app.theme_cls.primary_color


<MinusButton@MDIconButton>:
    icon: "minus-circle-outline"
    icon_size: "44sp"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    #text_color: app.theme_cls.primary_color


<ThirdScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDTextField:
            id: catpro
            hint_text: "wpisz nazwe kategorii lub projektu"
            mode: "fill"

        MDLabel:
            size_hint_y: 0.4
            text: 'dodaj "+" lub usuń "-" projekt lub kategorię'
            halign: 'center'
            font_style: 'Body1'
            theme_text_color: "Custom"
            text_color: 0.349, 0.349, 0.349, 1

        MDBoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            MyLabel:
                # size_hint_y: 0.15
                text: 'kategorie'

            MDFloatLayout:
                PlusButton:
                    on_release:
                        root.add_cat(catpro.text)
                        #root.dialog_icon_third()
                        root.ids.catpro.text = ''

            MDFloatLayout:
                MinusButton:
                    on_release:
                        root.del_cat('category', catpro.text)
                        root.ids.catpro.text = ''
                        #root.dialog_icon_third()

        MDSeparator:
            height: "1dp"

        MDBoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            MyLabel:
                # size_hint_y: 0.15
                text: 'projekty'


            MDFloatLayout:
                PlusButton:
                    on_release:
                        root.add_pro(catpro.text)
                        #root.dialog_icon_third()
                        root.ids.catpro.text = ''


            MDFloatLayout:
                MinusButton:
                    on_release:
                        root.del_pro('project', catpro.text)
                        #root.dialog_icon_third()
                        root.ids.catpro.text = ''
        MDSeparator:
            height: "1dp"

        MDBoxLayout:
            orientation: 'vertical'
            # size_hint_y: 0.2

            MyLabel:
                # size_hint_y: 0.15
                text: 'usuń wszystkie koszty z portefla'

            MDFloatLayout:
                MDRectangleFlatButton:
                    text: 'wyczyść portfel'
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release:
                        root.ids.catpro.text = ''
                        root.clear_db_()


        MDBoxLayout:
            #size_hint_y: 0.2

